<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;net461;netstandard2.0;netcoreapp3.1</TargetFrameworks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Product>IceCoffee</Product>
    <Description>一个简单的数据库CRUD操作封装库</Description>
    <Copyright>Copyright (c) 2021 IceCoffee</Copyright>
    <PackageProjectUrl>https://github.com/1249993110/IceCoffee.DbCore</PackageProjectUrl>
    <RepositoryUrl>https://github.com/1249993110/IceCoffee.DbCore</RepositoryUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Authors>IceCoffee</Authors>
    <Company>IceCoffee</Company>
    <Version>1.0.0.43</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
  
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\IceCoffee.Common\IceCoffee.Common\IceCoffee.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PostSharp.Redist" Version="6.9.7" />
    <PackageReference Include="PostSharp" Version="6.9.7">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Mapster" Version="6.5.1" />
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.114.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <Reference Include="System.Configuration" />
    <PackageReference Include="Dapper">
      <Version>1.50.2</Version>
    </PackageReference>
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' != 'net45'">
    <PackageReference Include="Dapper">
      <Version>2.0.90</Version>
    </PackageReference>
    <PackageReference Include="System.Data.SqlClient">
      <Version>4.8.2</Version>
    </PackageReference>
    <!--<PackageReference Include="Microsoft.Extensions.ObjectPool">
      <Version>5.0.8</Version>
    </PackageReference>-->
  </ItemGroup>

</Project>
