<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0;netstandard2.1</TargetFrameworks>

    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Product>IceCoffee</Product>
    <Description>一个简单的数据库操作框架</Description>
    <Copyright>Copyright (c) 2020 IceCoffee</Copyright>
    <PackageProjectUrl>https://github.com/1249993110/IceCoffee.DbCore</PackageProjectUrl>
    <RepositoryUrl>https://github.com/1249993110/IceCoffee.DbCore</RepositoryUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Authors>IceCoffee</Authors>
    <Company>IceCoffee</Company>
    <Version>1.0.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\IceCoffee.Common\IceCoffee.Common\IceCoffee.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PostSharp.Redist" Version="6.6.12" />
    <PackageReference Include="PostSharp" Version="6.6.12">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.113.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
    <Reference Include="System.Configuration" />
    <PackageReference Include="Dapper">
      <Version>1.50.2</Version>
    </PackageReference>
    <PackageReference Include="AutoMapper">
      <Version>7.0.1</Version>
    </PackageReference>
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Dapper">
      <Version>2.0.35</Version>
    </PackageReference>
    <PackageReference Include="System.Data.SqlClient">
      <Version>4.8.1</Version>
    </PackageReference>
    <PackageReference Include="AutoMapper">
      <Version>10.0.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Dapper">
      <Version>2.0.35</Version>
    </PackageReference>
    <PackageReference Include="System.Data.SqlClient">
      <Version>4.8.1</Version>
    </PackageReference>
    <PackageReference Include="AutoMapper">
      <Version>10.0.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
